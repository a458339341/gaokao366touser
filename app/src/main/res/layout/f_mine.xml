<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/m_titleBar"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="#55dd4b3d">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/m_iv_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/m_tv_name"
                style="@style/tvStyle_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="阳哥" />
        </LinearLayout>

        <TextView
            android:id="@+id/m_tv_setting"
            style="@style/tvStyle_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:text="设置" />
    </RelativeLayout>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            android:orientation="vertical">

            <com.gaokao366.gaokao366touser.model.widget.MySettingView
                android:id="@+id/s_personInfo"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dp_common" />

            <com.gaokao366.gaokao366touser.model.widget.MySettingView
                android:id="@+id/s_myOrder"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dp_common" />


            <com.gaokao366.gaokao366touser.model.widget.MySettingView
                android:id="@+id/s_myChecked"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dp_common" />


            <com.gaokao366.gaokao366touser.model.widget.MySettingView
                android:id="@+id/s_onLineCheckIn"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dp_common" />

            <com.gaokao366.gaokao366touser.model.widget.MySettingView
                android:id="@+id/s_feedBack"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dp_common" />

            <com.gaokao366.gaokao366touser.model.widget.MySettingView
                android:id="@+id/s_complain"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dp_common" />

            <com.gaokao366.gaokao366touser.model.widget.MySettingView
                android:id="@+id/s_onlineCallCenter"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dp_common" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>