<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background" android:color="@color/gray_light">
        <shape>
            <corners android:radius="5dip" />
            <solid android:color="@color/gray_light"/>
        </shape>
    </item>
    <item android:id="@android:id/progress" android:color="@color/tv_blue">
        <clip>
            <shape>
                <corners android:radius="5dip" />
                <solid android:color="@color/tv_blue"/>
            </shape>
        </clip>
    </item>
</layer-list>
